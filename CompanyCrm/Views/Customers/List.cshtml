@model IEnumerable<CustomerModel>

@{
    ViewData["Title"] = "Customer List";
}

<h1>List</h1>
<h4>Total Customers: @Model.Count()</h4>
<p>
    <a asp-action="Create">Add New Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => customer.FullName)
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@customer.CustomerId">Update</a> |
                    <a asp-action="Details" asp-route-id="@customer.CustomerId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@customer.CustomerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.Identity.IsAuthenticated)
{
    <table class="table table-sm">
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </table>
}